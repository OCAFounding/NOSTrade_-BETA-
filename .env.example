# Application
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb://admin:password@mongodb:27017/nostrade?authSource=admin

# Redis
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# API Keys (replace with your actual keys)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
GEMINI_API_KEY=your-gemini-api-key
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint

# Trading Parameters
MAX_POSITION_SIZE=1.0
RISK_PER_TRADE=0.02
MAX_DAILY_TRADES=10

# Monitoring
MONITORING_INTERVAL=10
ALERT_THRESHOLD=0.8

# Compliance
COMPLIANCE_CHECK_INTERVAL=300
MAX_DRAWDOWN=0.1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# Security
SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nostrade

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# AI Services
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX=your_pinecone_index

# Trading APIs
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Monitoring
ENABLE_MONITORING=True
ALERT_EMAIL=alerts@example.com

# Stress Testing
STRESS_TEST_MAX_OPERATIONS=1000
STRESS_TEST_DEFAULT_AGENTS=StockAgent_A,ForexAgent_B,CryptoAgent_C,ArbitrageAgent_D
STRESS_TEST_DEFAULT_TASKS=buy,sell,hedge,rebalance 